-- SUM
SELECT SUM(SALARY)AS "총 월급 합" FROM EMPLOYEE;
SELECT SUM(COMMISSION) AS "보너스 NULL값 제외" FROM EMPLOYEE;

-- AVG
SELECT AVG(SALARY) AS "월급 평균" FROM EMPLOYEE;

-- MIN, MAX
SELECT MIN(SALARY) AS "최저 월급", MAX(SALARY) AS "최대 월급" FROM EMPLOYEE;

-- COUNT
SELECT COUNT(SALARY), COUNT(COMMISSION) FROM EMPLOYEE;

--GROUP BY
--테이블에서 특정 그룹을 만드는 것
SELECT JOB AS 직급, AVG(SALARY) AS "월급 평균"
FROM EMPLOYEE GROUP BY JOB;

-- HAVING
-- GOUP BY 절을 통해 만들어진 GROUP에 대해서 조건을 거는 것

-- 각 직급에 대해 3명 이상인 직급과 그 인원 수 출력하기
SELECT JOB AS 직급, COUNT(JOB) AS "직급 수"
FROM EMPLOYEE GROUP BY JOB 
HAVING COUNT(JOB)>=3;

-- 월급이 300만원 이상인 사람들에 대해서 직급 별로 2명 이상인
-- 직급과 그 직급의 월급 평균을 구해라
SELECT JOB AS  직급, AVG(SALARY) AS "월급 평균"
FROM EMPLOYEE WHERE SALARY>=300
GROUP BY JOB HAVING COUNT(JOB)>=2;
